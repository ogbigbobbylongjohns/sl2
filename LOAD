updateTitleLabel.BackgroundTransparency = 1
updateTitleLabel.Font = Enum.Font.GothamBold
updateTitleLabel.TextSize = 22
updateTitleLabel.TextStrokeTransparency = 0.8
updateTitleLabel.Parent = bulletinsFrame

